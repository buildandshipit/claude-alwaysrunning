{
  "name": "claude-alwaysrunning",
  "version": "3.0.0",
  "description": "Run Claude Code as a persistent Jarvis-like assistant with memory, reminders, and proactive alerts",
  "main": "src/index.js",
  "bin": {
    "claude-always": "./bin/claude-always.js"
  },
  "scripts": {
    "start": "node bin/claude-always.js start",
    "voice": "node bin/claude-always.js voice",
    "whatsapp": "node bin/claude-always.js whatsapp",
    "electron:dev": "npm run electron:compile-main && concurrently -k \"npm run electron:vite\" \"npm run electron:wait\"",
    "electron:vite": "vite --config electron/vite.config.ts",
    "electron:wait": "wait-on http://localhost:5173 && npm run electron:launch",
    "electron:launch": "cross-env NODE_ENV=development electron electron/dist-main/main/index.js",
    "electron:compile-main": "tsc -p electron/tsconfig.main.json",
    "electron:build": "npm run electron:compile-main && vite build --config electron/vite.config.ts && electron-builder",
    "electron:preview": "vite preview --config electron/vite.config.ts"
  },
  "keywords": [
    "claude",
    "cli",
    "service",
    "daemon",
    "always-on",
    "voice",
    "jarvis",
    "tts",
    "stt",
    "whisper",
    "memory",
    "reminders",
    "scheduler",
    "notifications",
    "assistant"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "chrono-node": "^2.9.0",
    "commander": "^11.1.0",
    "node-cron": "^4.2.1",
    "node-notifier": "^10.0.1",
    "node-pty": "^1.0.0",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.26.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId": "com.claude.alwaysrunning",
    "productName": "Claude Always Running",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/dist/**/*",
      "electron/main/**/*",
      "electron/preload/**/*",
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "electron/assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "electron/assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "electron/assets/icon.png"
    }
  }
}
